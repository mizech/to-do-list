<p id="notice"><%= notice %></p>
<table class="table-bordered table">
  <tbody>
    <% @lists.each do |list| %>
      <% if list.completed %>
        <tr class="table-success">
          <td class="striker"><%= link_to list.description, edit_list_path(list) %></td>
          <td><center><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></center></td>
        </tr>
      <% else %>
        <tr>
          <td><%= link_to list.description, edit_list_path(list) %></td>
          <td><center><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></center></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>